pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = "my-jenkins-app"
    }

    stages {
        stage('Clone Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKER_IMAGE}:${env.BUILD_ID} ."
            }
        }

        stage('Clean Old Containers') {
            steps {
                // Stop and remove the container if it's already running
                sh "docker stop web-app || true && docker rm web-app || true"
            }
        }

        stage('Deploy Container') {
            steps {
                sh "docker run -d --name web-app -p 8080:3000 ${DOCKER_IMAGE}:${env.BUILD_ID}"
            }
        }
    }
    
    post {
        success {
            echo "Deployment Successful! Visit http://your-ip:8080"
        }
    }
}
